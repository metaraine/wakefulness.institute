*
	box-sizing border-box

img
	max-width 100%

body
	color #121212
	background-color #fff
	font-family Adamina, Georgia, Serif
	font-size 20px

p
	line-height 1.7
	margin-bottom 1.2em

.lead-text
	font-weight normal
	font-size 1.35em
	letter-spacing 0.2px
	margin-right 9px

.container-narrow
	max-width 800px
	margin 0 auto

.spread
	width 100%
	height 100%

.block
	display inline-block

.center
	display table
	& > *
		display table-cell
		vertical-align middle
		text-align center

.pad
	padding 25px

.splash-title
	margin-bottom 60px

@media (max-width: 992px)
	.splash-title
		margin-bottom 30px

.splash-subtitle
	line-height 2em
	margin 0

.text-dim
	color #b2b2b2
