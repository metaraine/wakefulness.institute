white = #fff
black = #000

amethyst = #9b59b6
sunflower = #f1c40f
asphalt = #34495e
midnight = #2c2c2d
river = #3498db
belize = #2980b9

yellow = rgb(255,189,0)
grass = rgb(182,237,0)

width-xs = 768px
width-sm = 992px
width-md = 1200px

*
	box-sizing border-box

img
	max-width 100%

body
	color #444
	background-color #fff
	font-family 'Open Sans', Adamina, Georgia, Serif
	font-size 20px

a
	color = grass
	color grass

	&:hover
		text-decoration none
		color lighten(color, 15%)

h3
	margin-top 0

p, ul
	line-height 1.7
	margin-bottom 1.2em

.quote
	font-family 'Helvetica Neue', Helvetica, Arial, Sans-Serif
	font-size 32px
	font-weight 100

.hero
	h1,h2
		font-family 'Helvetica Neue', Helvetica, Arial, Sans-Serif
		font-weight 100
	h1
		font-size 80px
	h2
		font-size 42px

.text-lead
	font-size 1.35em
	letter-spacing 0.2px
	margin-right 9px

.container-narrow
	max-width 800px
	margin 0 auto

.spread
	width 100%
	height 100%

.spread-most
	width 100%
	height 76%

.wide
	width 100%

.block
	display inline-block

.center
	display table
	& > *
		display table-cell
		vertical-align middle
		text-align center

.left
	float left
.right
	float right

.pad
	padding 25px
.pad-md
	padding 50px
.pad-lg
	padding 100px
.vpad
	padding 25px 0
.vpad-md
	padding 50px 0
.vpad-lg
	padding 100px 0

.space
	margin 50px
.space-lg
	margin 100px

.space-above
	margin-top 25px
.space-above-md
	margin-top 50px
.space-above-lg
	margin-top 100px

.space-below
	margin-bottom 25px
.space-below-md
	margin-bottom 50px
.space-below-lg
	margin-bottom 100px

.vspace
	margin 25px 0
.vspace-md
	margin 50px 0
.vspace-lg
	margin 100px 0

.splash-title
	margin-bottom 60px

@media (max-width: 992px)
	.splash-title
		margin-bottom 30px

.splash-subtitle
	line-height 2em
	margin 0

.text-caption
	font-size 16px
	text-transform uppercase
	font-weight bold

.text-sm
	font-size 16px

.text-dim
	color #b2b2b2

.text-yellow
	color yellow

a.text-yellow:hover
	color lighten(yellow, 15%)

.list-wide li
	margin-bottom 10px

.btn-dark
	border solid 1px grass
	background-color transparent
	color white

// themes
.theme-pale
	background-color lighten(black, 90%)

.theme-pretty
	// background-color yellow
	color white
	background url(/images/www/nature-river.jpg) 0 22%

.theme-pretty-light
	background-color lighten(black, 90%)

.theme-dark
	background-color midnight
	color white

.theme-nature1
	color white
	background url(/images/www/nature-river.jpg) 0 91%

	@media (max-width: width-md)
		background-position 0 93%

	@media (max-width: width-sm)
		background-position 14% 95%

	@media (max-width: width-xs)
		background-position 16% 100%

// bootstrap overrides
.btn-primary
	font-weight 100
	font-size 24px
	color = grass
	color black
	background-color color
	border 0
	border-bottom solid 5px darken(color,  5%)
	&:hover
		color black
		background-color lighten(color, 15%)
		border-bottom-color color
	
.btn-lg
	font-size: 32px

